// pages/api/savePassword.js
import fs from 'fs';
import path from 'path';

export default async function handler(req, res) {
  if (req.method === 'POST') {
    const { password } = req.body;

    if (!password) {
      return res.status(400).json({ error: 'Wachtwoord is vereist' });
    }

    const filePath = path.join(process.cwd(), 'data', 'passwords.json');

    try {
      // Lees het bestaande bestand
      const fileData = fs.existsSync(filePath)
        ? JSON.parse(fs.readFileSync(filePath, 'utf8'))
        : {};

      // Voeg het nieuwe wachtwoord toe
      fileData.password = password;

      // Schrijf de bijgewerkte data naar het bestand
      fs.writeFileSync(filePath, JSON.stringify(fileData, null, 2));

      res.status(200).json({ message: 'Wachtwoord succesvol opgeslagen' });
    } catch (error) {
      res.status(500).json({ error: 'Er is een fout opgetreden bij het opslaan van het wachtwoord' });
    }
  } else {
    res.status(405).json({ error: 'Method not allowed' });
  }
}
